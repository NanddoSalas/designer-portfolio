---
import Icon from "astro-icon";
import Container from "../../layouts/Container.astro";
import Logo from "../Logo.astro";
import Text from "../Text.astro";
import Navigation from "./Navigation.astro";
import SocialIcon from "./SocialIcon.astro";
---

<div class="border-t-[1px] border-t-peach-85">
  <Container>
    <div
      class="pt-[30px] pb-[20px] lg:pt-[40px] 3xl:pt-[60px] space-y-[30px] lg:space-y-[20px] 3xl:space-y-[30px]"
    >
      <div
        class="flex flex-col lg:flex-row items-center lg:justify-between space-y-[20px] lg:space-y-0"
      >
        <Logo />

        <div class="hidden lg:block"><Navigation /></div>

        <div class="flex space-x-[14px]">
          <SocialIcon name="linkedin" />

          <SocialIcon name="twitter" />

          <SocialIcon name="dribbble" />
        </div>
      </div>

      <div class="lg:hidden flex justify-center"><Navigation /></div>

      <div class="hidden lg:flex justify-center">
        <div
          class="border-peach-85 border-[1px] rounded-[8px] py-[22px] px-[28px] 3xl:py-[24px] 3xl:px-[32px] flex space-x-[40px] w-fit"
        >
          <div class="space-x-[6px] 3xl:space-x-[8px] flex items-center">
            <Icon
              name="email"
              class="w-[20px] h-[20px] 3xl:w-[24px] 3xl:h-[24px]"
            />

            <Text class="text-[16px] 3xl:text-[18px]">
              jefferycannon@gmail.com
            </Text>
          </div>

          <div class="bg-peach-85 w-[1px]"></div>

          <div class="space-x-[6px] 3xl:space-x-[8px] flex items-center">
            <Icon
              name="phone"
              class="w-[20px] h-[20px] 3xl:w-[24px] 3xl:h-[24px]"
            />

            <Text class="text-[16px] 3xl:text-[18px]">+91 91813 23 2309</Text>
          </div>

          <div class="bg-peach-85 w-[1px]"></div>

          <div class="space-x-[6px] 3xl:space-x-[8px] flex items-center">
            <Icon
              name="location"
              class="w-[20px] h-[20px] 3xl:w-[24px] 3xl:h-[24px]"
            />

            <Text class="text-[16px] 3xl:text-[18px]">
              Somewhere in the World
            </Text>
          </div>
        </div>
      </div>

      <Text
        class="text-gray-50 text-[12px] lg:text-[14px] 3xl:text-[16px] text-center"
      >
        Copyright Â© 2023 Jeffery Cannon. All rights reserved.
      </Text>
    </div>
  </Container>
</div>
